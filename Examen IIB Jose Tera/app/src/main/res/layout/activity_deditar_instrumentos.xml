<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_deditar_instrumentos">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_nombre_instrumento"
        android:layout_width="337dp"
        android:layout_height="64dp"
        android:layout_marginTop="120dp"
        android:hint="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_precio_instrumento"
        android:layout_width="328dp"
        android:layout_height="64dp"
        android:layout_marginTop="52dp"
        android:hint="Precio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_instrumento" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_categoria_instrumento"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:hint="Categoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_precio_instrumento" />

    <Button
        android:id="@+id/btn_save_instrumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_categoria_instrumento" />
</androidx.constraintlayout.widget.ConstraintLayout>